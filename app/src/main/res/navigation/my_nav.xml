<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav"
    app:startDestination="@id/firstScreenFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.kleine.fragments.LoginFragment"
        android:label="LoginFragment"
        />
    <fragment
        android:id="@+id/firstScreenFragment"
        android:name="com.example.kleine.fragments.FirstScreenFragment"
        android:label="FirstScreenFragment" >
        <action
            android:id="@+id/action_firstScreenFragment_to_secondScreenFragment"
            app:destination="@id/secondScreenFragment"
            app:enterAnim="@anim/from_left_to_right"
            app:popUpTo="@id/firstScreenFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/secondScreenFragment"
        android:name="com.example.kleine.fragments.SecondScreenFragment"
        android:label="SecondScreenFragment" >
        <action
            android:id="@+id/action_secondScreenFragment_to_registerFragment"
            app:destination="@id/registerFragment"
            app:enterAnim="@anim/from_left_to_right"
            app:popEnterAnim="@anim/from_right_to_left" />
        <action
            android:id="@+id/action_secondScreenFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:enterAnim="@anim/from_left_to_right"
            app:popEnterAnim="@anim/from_right_to_left" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.kleine.fragments.RegisterFragment"
        android:label="RegisterFragment" >
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:enterAnim="@anim/from_left_to_right"
            app:popEnterAnim="@anim/from_right_to_left"
            app:popUpTo="@id/registerFragment"
            app:popUpToInclusive="true" />
    </fragment>
</navigation>